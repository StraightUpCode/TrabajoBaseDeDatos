<header>
  <div class="page-header">
    <h2 class="display-4">Nuevo Ingreso</h2>
  </div>
</header>
<section>
  <br>
  <!--Inicio de formulario usando FORM-->
  <form id="formularioTrabajador" method="post" class="mx-auto col-sm-6">
    <div class="container">
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Nombre:</label>
        <div class="col-auto">
          <input type="text" class="form-control" name="nombre" placeholder="Ingrese los nombres" maxlength="24"
            required>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Apellidos:</label>
        <div class="col-auto">
          <input type="text" class="form-control" name="apellido" placeholder="Ingrese los apellidos" maxlength="24"
            required>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Cedula:</label>
        <div class="col-auto">
          <input type="text" class="form-control" name="cedula" placeholder="Cedula de identidad" maxlength="14"
            required>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Fecha de Ingreso:</label>
        <div class="col-auto">
          <input type="date" class="form-control" name="fechaDeContratacion" required>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Cargo:</label>
        <div class="col-auto">
          <select name="idCargo" id="cargos" class="form-control">
            {{#each cargo}}
            <option value="{{idCargo}}">{{nombre}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div id="comision"class="form-group row d-none">
        <label class="col-sm-4 col-form-label">Comision:</label>
        <div class="col-auto">
          <input type="number" step="any" class="form-control" name="porcentajeComision" placeholder="Porcentaje Comision" max="100"
            min="0">
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Salario base:</label>
        <div class="col-auto">
          <input type="number" step="any" class="form-control" name="salario" placeholder="Salario" max="1000000"
            min="0" required>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="salarioPorHora" name="salarioPorHora" value="true">
            <label class="form-check-label" for="salarioPorHora">Salario por hora</label>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Fecha Pago:</label>
        <div class="col-auto">
          <select name="idDiaPago" id="fechaPagos" class="form-control">
            {{#each diaPago}}
            <option value="{{idDiaDePago}}">{{diaPago}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-4 col-form-label">Frecuencia de Pago:</label>
        <div class="col-auto">
          <select name="idFrecuenciaDePago" id="frecuenciaPago" class="form-control">
            {{#each frecuenciaDePago}}
            <option value="{{idFrecuenciaDePago}}">{{nombre}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="mx-auto col-sm-4">
        <div>
          <button type="submit" class="btn btn-block btn-primary">Enviar</button>
        </div>
      </div>
    </div>
  </form>

  <footer>

  </footer>
  <script src="./assets/js/agregarTrabajadores.js"> </script>