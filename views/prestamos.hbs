<div id="divPrestamo">

  <div class="row">
    <div class="col-md-6">
      <h2 class"display-4" >Prestamos</h2>
    </div>
  </div>

  <div class="row">

    <div class="col-md-4">
      <div class="form-group">
        <label for="exampleInputEmail1">Codigo Trabajador</label>
        <input id='txtcodigo' type="text" class="form-control" aria-describedby="emailHelp" placeholder="">
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <label for="exampleInputEmail1">Tasa</label>
        <input id='txttasa' type="number" step="0.01" class="form-control" aria-describedby="emailHelp" placeholder="">
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <label for="exampleInputEmail1">Fecha</label>
        <input id='txtfecha' type="date" class="form-control" aria-describedby="emailHelp" placeholder="">
